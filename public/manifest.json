{
  "manifest_version": 3,
  "name": "Gesture Browser Control",
  "version": "0.1.0",
  "description": "Scroll pages using hand gestures (index up, thumbs down, fist to stop).",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://cdn.jsdelivr.net/*",
    "https://storage.googleapis.com/*"
  ],
  "action": {
    "default_title": "Gesture Control",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "wasm/*",
        "hand_landmarker.task"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}